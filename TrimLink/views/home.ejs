<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <link rel="icon" type="image/png" href="/icon.png" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>TrimLink - URL Shortener</title>

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&display=swap" rel="stylesheet">

  <style>
    body {
      font-family: 'DM Sans', sans-serif;
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      background: #f8f8ff;
      color: #333;
    }

    /* ===== Navbar ===== */
    nav {
      display: flex;
      font-weight: 600;
      justify-content: space-between;
      align-items: center;
      background: white;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
      padding: 12px 20px;
      position: sticky;
      top: 0;
      z-index: 1000;
    }
    nav h2 { color: black; margin: 0; }
    nav .links { display: flex; align-items: center; gap: 15px; }
    nav a { color: #6a34f5; text-decoration: none; font-weight: 500; transition: 0.3s; }
    nav a:hover { color: blue; }

    /* ===== Hamburger ===== */
    .hamburger { display: none; flex-direction: column; gap: 5px; cursor: pointer; }
    .hamburger span { width: 25px; height: 3px; background: black; border-radius: 2px; transition: 0.4s; }

    /* ===== Mobile Menu ===== */
    .mobile-menu {
      position: fixed; top: 0; right: -60%; width: 50%; height: 100%;
      background:white; box-shadow: 0 2px 6px rgba(0,0,0,0.1);
      padding: 70px 20px; display: flex; flex-direction: column; gap: 20px;
      transition: right 0.5s ease-in-out; z-index: 999;
    }
    .mobile-menu.show { right: 0; }
    .mobile-menu a, .mobile-menu span { color: black; text-decoration: none; font-weight: 500; }
    .mobile-menu a:hover { color: #4cafef; }
    @media (max-width: 768px) { nav .links { display: none; } .hamburger { display: flex; } }

    /* ===== Form Styling ===== */
    form {
      max-width: 600px; margin: 20px auto; padding: 20px;
      background: #fff; border-radius: 12px; box-shadow: 0 4px 10px rgba(0,0,0,0.1);
      text-align: center;
    }
    label { font-weight: bold; display: block; margin-bottom: 10px; }
    input[type="url"] {
      width: 90%; padding: 10px; border: 1px solid #ccc; border-radius: 8px;
      margin-bottom: 15px; transition: 0.3s;
    }
    input[type="url"]:focus { border-color: #4cafef; outline: none; box-shadow: 0 0 6px rgba(76,175,239,0.3); }
    button {
      padding: 10px 20px; background: #4cafef; border: none; border-radius: 8px;
      color: white; font-weight: bold; cursor: pointer; transition: 0.3s;
    }
    button:hover { background: #3a9ddf; }

    /* ===== Short URL Box ===== */
    .short-url {
      max-width: 600px; margin: 20px auto; padding: 15px;
      background: #e8f5e9; border: 1px solid #c8e6c9; border-radius: 10px;
      box-shadow: 0 3px 8px rgba(0,0,0,0.1); text-align: center;
    }
    .short-url a { color: #2e7d32; font-weight: bold; text-decoration: none; }
    .short-url a:hover { text-decoration: underline; }
    .copy-btn {
      margin-left: 10px; padding: 5px 10px; font-size: 14px;
      border: none; border-radius: 6px; background: #4cafef; color: white;
      cursor: pointer; transition: 0.3s;
    }
    .copy-btn:hover { background: #3a9ddf; }

    /* Home Button */
    .home-btn {
      display: inline-block;
      margin-top: 10px;
      border: 1px solid black;
      padding: 8px 12px;
      background: white;
      color: black;
      font-weight: bold;
      text-decoration: none;
      border-radius: 8px;
      transition: 0.3s;
    }
    .home-btn:hover {
      color: black;
      background: whitesmoke;
      text-decoration: none;
    }
    

    /* ===== Table Styling ===== */
    table {
      width: 100%; max-width: 1000px; margin: 20px auto; border-collapse: collapse;
      border-radius: 12px; overflow: hidden; background: #fff;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }
    th, td { padding: 12px 10px; text-align: center; }
    th { background: #4cafef; color: white; }
    tr:nth-child(even) { background: #f2f2f2; }
    tr:hover { background: #eaf6ff; }
    td a { color: #0073e6; text-decoration: none; }
    td a:hover { text-decoration: underline; }

    /* Delete Button */
    .delete-btn {
      background: transparent;
      border: none;
      cursor: pointer;
      font-size: 18px;
      color: red;
      transition: 0.3s;
    }
    .delete-btn:hover { color: darkred; }

    /* Responsive Table */
    @media (max-width: 768px) {
      table, thead, tbody, th, td, tr { display: block; }
      thead tr { display: none; }
      tbody tr {
        margin-bottom: 15px; border: 1px solid #ddd;
        border-radius: 10px; padding: 10px; background: #fff;
      }
      td { display: flex; justify-content: space-between; padding: 8px 10px; border: none; border-bottom: 1px solid #eee; }
      td:last-child { border-bottom: none; }
      td:before { font-weight: bold; color: #333; content: attr(data-label); }
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav>
    <h2>
  <img src="/icon.png" alt="Logo" style="width: 32px; height: 32px; vertical-align: middle; margin-right: 8px;">
  TrimLink
</h2>

    <div class="links">
      <% if (user) { %>
        <span>üëã Welcome, <%= user.name %></span>
        <a href="/user/logout">Logout</a>
      <% } else { %>
        <a href="/login">Login</a>
        <a href="/signup">Signup</a>
      <% } %>
    </div>
    <div class="hamburger" id="hamburger"><span></span><span></span><span></span></div>
  </nav>

  <!-- Mobile Menu -->
  <div class="mobile-menu" id="mobileMenu">
    <% if (user) { %>
      <span>üëã Welcome, <%= user.name %></span>
      <a href="/user/logout">Logout</a>
    <% } else { %>
      <a href="/login">Login</a>
      <a href="/signup">Signup</a>
    <% } %>
  </div>

  <!-- Success Message -->
  <% if (locals.id) { %>
    <div class="short-url" id="successMsg">
      <p>‚úÖ URL Generated: 
        <a href="<%= BASE_URL %>/<%= id %>" target="_blank" id="generatedLink">
          <%= BASE_URL %>/<%= id %>
        </a>
        <button class="copy-btn" onclick="copyToClipboard()">Copy</button>
      </p>
      <!-- Go Back Home Button -->
      <a href="/" class="home-btn">‚¨ÖÔ∏è Go Back Home</a>
    </div>
  <% } %>

  <!-- URL Form -->
  <form method="POST" action="/url">
    <label for="url">Enter Your Original URL:</label>
    <input type="url" id="url" name="url" placeholder="https://example.com" required>
    <br>
    <button type="submit">Generate</button>
  </form>

  <!-- Table -->
  <% if (locals.urls && urls.length > 0) { %>
    <h3 style="text-align:center; margin-top:30px;">All Shortened URLs</h3>
    <table>
      <thead>
        <tr>
          <th>Serial No.</th> 
          <th>ShortID</th>
          <th>Original URL</th>
          <th>Clicks</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% urls.forEach((url, index) => { %>
          <tr id="row-<%= url.shortId %>">
            <td data-label="S. No."><%= index + 1 %></td>
            <td data-label="ShortID">
              <a href="<%= BASE_URL %>/<%= url.shortId %>" target="_blank"><%= url.shortId %></a>
            </td>
            <td data-label="Original URL">
              <a href="<%= url.redirectURL %>" target="_blank"><%= url.redirectURL %></a>
            </td>
            <td data-label="Clicks"><%= url.visitHistory.length %></td>
            <td data-label="Delete">
              <button class="delete-btn" onclick="deleteUrl('<%= url.shortId %>')">üóëÔ∏è</button>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>

  <script>
    const hamburger = document.getElementById("hamburger");
    const mobileMenu = document.getElementById("mobileMenu");
    hamburger.addEventListener("click", () => { mobileMenu.classList.toggle("show"); });

    function copyToClipboard() {
      const link = document.getElementById("generatedLink").textContent;
      navigator.clipboard.writeText(link).then(() => {
        alert("Copied: " + link);
      });
    }

    async function deleteUrl(shortId) {
      if (!confirm("Are you sure you want to delete this URL?")) return;
      try {
        const res = await fetch(`/url/delete/${shortId}`, { method: "DELETE" });
        if (res.ok) {
          document.getElementById(`row-${shortId}`).remove();
          alert("URL deleted successfully!");
        } else {
          alert("Failed to delete URL.");
        }
      } catch (err) {
        console.error(err);
        alert("Error while deleting.");
      }
    }
  </script>
</body>
</html>

